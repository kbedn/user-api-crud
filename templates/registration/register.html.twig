{% extends 'base.html.twig' %}

{% block title %}Register!{% endblock %}

{% block body %}
        {% if app.user %}
                <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
        {% endif %}
        {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn btn-primary">{{ button_label|default('Register') }}</button>
        {{ form_end(form) }}
{% endblock %}
